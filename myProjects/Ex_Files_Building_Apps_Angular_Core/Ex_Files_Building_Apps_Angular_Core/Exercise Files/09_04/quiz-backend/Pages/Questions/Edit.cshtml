@page
@model quiz_backend.Pages.Questions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Question.ID" />
            <div class="form-group">
                <label asp-for="Question.Text" class="control-label"></label>
                <input asp-for="Question.Text" class="form-control" />
                <span asp-validation-for="Question.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.CorrectAnswer" class="control-label"></label>
                <input asp-for="Question.CorrectAnswer" class="form-control" />
                <span asp-validation-for="Question.CorrectAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Answer1" class="control-label"></label>
                <input asp-for="Question.Answer1" class="form-control" />
                <span asp-validation-for="Question.Answer1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Answer2" class="control-label"></label>
                <input asp-for="Question.Answer2" class="form-control" />
                <span asp-validation-for="Question.Answer2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Answer3" class="control-label"></label>
                <input asp-for="Question.Answer3" class="form-control" />
                <span asp-validation-for="Question.Answer3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.QuizId" class="control-label"></label>
                <input asp-for="Question.QuizId" class="form-control" />
                <span asp-validation-for="Question.QuizId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
