@page
@model quiz_backend.Pages.Questions.IndexModel



@{
  ViewData["Title"] = "Index";
}
<h2>Index</h2>
<p>
  <a asp-page="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Question[0].Text)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Question[0].CorrectAnswer)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Question[0].Answer1)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Question[0].Answer2)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Question[0].Answer3)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Question[0].QuizId)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Question)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.CorrectAnswer)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Answer1)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Answer2)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Answer3)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.QuizId)
        </td>
        <td>
          <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
          <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
          <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
